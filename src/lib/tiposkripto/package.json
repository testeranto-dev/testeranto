{
  "name": "testeranto.tiposkripto",
  "version": "0.0.28",
  "description": "the typescript implementation of testeranto",
  "author": "adamwong246@gmail.com",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "build-module": "tsc -p tsconfig.module.json",
    "build-common": "tsc -p tsconfig.common.json",
    "build-types": "tsc -p tsconfig.types.json",
    "build": "sh prebuild.sh; cp ./cjs-shim.js ./cjs-shim.js; tsc -p tsconfig.module.json; tsc -p tsconfig.common.json; tsc -p tsconfig.types.json; sh postBuild.sh; node bundle.js",
    "prepack": "yarn run build"
  },
  "files": [
    "dist/**",
    "package.json",
    "README*",
    "LICENSE*"
  ],
  "main": "./dist/common/index.js",
  "module": "./dist/module/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/module/index.js",
      "require": "./dist/common/index.js"
    },
    "./types": {
      "types": "./dist/types/CoreTypes.d.ts",
      "import": "./dist/module/CoreTypes.js",
      "require": "./dist/common/CoreTypes.js"
    }
  },
  "dependencies": {
    "typescript": "^5.9.3"
  }
}